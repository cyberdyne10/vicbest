# Server
PORT=3000
BASE_URL=http://localhost:3000
# Used in checkout callback + public order tracking links
# Optional: path to sqlite db file (use a persistent disk path in production, e.g. /var/data/vicbest.db on Render)
SQLITE_PATH=./data/vicbest.db
# Optional backup settings
SQLITE_BACKUP_DIR=./backups
SQLITE_BACKUP_KEEP=14

# Paystack
PAYSTACK_SECRET_KEY=SET_IN_ENV
PAYSTACK_PUBLIC_KEY=SET_IN_ENV
PAYSTACK_WEBHOOK_SECRET=SET_IN_ENV

# Admin dashboard
ADMIN_PASSWORD=change_me_to_a_strong_password
# Optional: separate signing key for admin auth token
ADMIN_TOKEN_SECRET=replace_with_long_random_string

# User auth (JWT-like signed cookie)
USER_TOKEN_SECRET=replace_with_another_long_random_string

# Notifications (SMTP + recipients)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=notifications@example.com
SMTP_PASS=replace_with_smtp_password
SMTP_FROM="Vicbest Store <notifications@example.com>"
ADMIN_NOTIFICATION_EMAILS=owner@example.com,ops@example.com

# Used for WhatsApp message-link fallback payload when SMTP is unavailable
STORE_WHATSAPP_NUMBER=2348091747685

# Cron/job trigger secret for low-stock daily summary endpoint
INVENTORY_JOB_SECRET=replace_with_inventory_job_secret

# Advanced feature suite
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=change_this_seed_password
ABANDONED_CART_JOB_SECRET=replace_with_abandoned_cart_job_secret
ABANDONED_CART_MINUTES=60
FRAUD_REVIEW_THRESHOLD=45
FRAUD_HIGH_AMOUNT=1500000
AI_PROVIDER=openai
AI_API_KEY=


